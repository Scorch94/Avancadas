<Window x:Class="AvancadoFinal.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvancadoFinal"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush TileMode="FlipX" ImageSource="/1000021935.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,115,0,0">
            <TextBox Name="UsernameTextBox" Width="200" Margin="10" Text="Username"/>
            <PasswordBox Name="PasswordBox" Width="200" Margin="10"/>
            <ComboBox Name="RoleComboBox" Width="200" Margin="10" Text="Select Role">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="User"/>
            </ComboBox>
            <Button Content="Login" Width="200" Margin="10" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
